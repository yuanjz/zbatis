<?xml version="1.0" encoding="UTF-8"?>
<!-- 配置文件 -->
<configuration>
    <environment id="mysql">
        <transactionManager type="JDBC"/>
        <dataSource type="POOLED">
            <!-- 数据库驱动 -->
            <property name="driver" value="com.mysql.jdbc.Driver"/>
            <property name="url" value="jdbc:mysql://localhost:3306/advertiser?useSSL=false&amp;useUnicode=true&amp;characterEncoding=utf8"/>
            <property name="username" value="root"/>
            <!--<property name="password" value="root"/>-->
        </dataSource>
    </environment>
    <mappers>
        <mapper resource="classpath:mapper/CustMapper.xml"/>
        <mapper resource="classpath:mapper/OrderMapper.xml"/>
    </mappers>
</configuration>

